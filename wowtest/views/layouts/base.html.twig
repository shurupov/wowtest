<!DOCTYPE html>
{% if not static %}
{{ use ('app/assets/AppAsset' )}}
{{ register_app_asset() }}
{{ begin_page() }}
{% endif %}
<html lang="{{ app.language }}">
<head>
    <meta charset="{{ app.charset }}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% if not static %}{{ html.csrfMetaTags()|raw }}{% endif %}
    <title>{% block title %}{% endblock %}</title>

    {% if static %}
        <link href="assets/bootstrap.css" rel="stylesheet">
        <link href="assets/site.css" rel="stylesheet">
    {% endif %}

    {% if not static %}{{ head() }}{% endif %}

<body>

{% if not static %}{{ begin_body() }}{% endif %}

<div class="wrap">
    <nav id="w0" class="navbar-inverse navbar-fixed-top navbar"><div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#w0-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" {% if not static %}href="/"{% endif %}>Тестовое задание WOW</a>
            </div>
            <div id="w0-collapse" class="collapse navbar-collapse"></div>
        </div>
    </nav>
    <div class="container">


        {% block body %}{% endblock %}

    </div>
</div>

<footer class="footer">
    <div class="container">
        <p class="pull-left">&copy; Тестовое задание WOW 2017</p>

        <p class="pull-right">Powered by <a href="http://www.yiiframework.com/" rel="external">Yii Framework</a></p>
    </div>
</footer>

{% if not static %}{{ end_body() }}{% endif %}
</body>
</html>
{% if not static %}{{ end_page() }}{% endif %}